<Window x:Class="Laba35.Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba35.Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="Button1" Grid.Row="1" Grid.Column="0" Click="Button_Click" BorderBrush="#FFDC3737" Background="#FF50F707">1 кнопка</Button>
        <Button x:Name="Button2" Grid.Row="1" Grid.Column="1" Click="Button2_Click" Background="#FFFF00EA">2 кнопка</Button>
        <Button x:Name="Button3" Grid.Row="1" Grid.Column="2" Click="Button3_Click" Background="#FF0637FF">3 кнопка</Button>

    </Grid>
</Window>
